<div id=form_teacher>
  <fieldset>
   <legend>Вход</legend>


<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>


  <ol>
   <li>
    <%= f.label :"E-mail" %> <br />
    <%= f.email_field :email %>
   </li>
   <li>
     <%= f.label :Пароль %><br />
     <%= f.password_field :password %>
   </li>
   <li>
  <% if devise_mapping.rememberable? -%>
   <%= f.check_box :remember_me %> <%= f.label :Запомнить_меня? %>
  <% end -%>
   </li>
   </ol>
   </fieldset>

  <br />
  <div><%= f.submit "Войти" %></div>
<% end %>

</div>