<div class="content_box large">
  <h1>Uni Admin Demo: Uni Admin Table</h1>
  
  <table class="uni_admin_table">
    <thead>
      <tr>
        <th> First Name </th>
        <th> Last Name </th>
        <th> Email </th>
        <th> Address </th>
        <th> Phone Number </th>
        <th> Fax </th>
      </tr>
    </thead>

    <tbody>
      <% @records.each do |record| %>
        <tr <%= switch_tr_class %>>
          <td><%=h record[0] %></td>
          <td><%=h record[1] %></td>
          <td><%=h record[2] %></td>
          <td><%=h record[3] %></td>
          <td><%=h record[4] %></td>
          <td><%=h record[5] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
